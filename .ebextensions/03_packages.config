# System packages required for TTS and audio processing

packages:
  yum:
    gcc: []
    gcc-c++: []
    python3-devel: []
    libsndfile: []
    libsndfile-devel: []
    espeak-ng: []
    ffmpeg: []

commands:
  01_upgrade_pip:
    command: |
      source /var/app/venv/*/bin/activate
      pip install --upgrade pip setuptools wheel
    ignoreErrors: false
