# Environment Configuration Template
# Copy to .env and configure for your deployment

# ============================================================
# FLASK CONFIGURATION
# ============================================================
FLASK_ENV=production
FLASK_DEBUG=0
FLASK_APP=app.py

# ============================================================
# SERVER CONFIGURATION
# ============================================================
SERVER_HOST=0.0.0.0
SERVER_PORT=5000
SERVER_WORKERS=4

# ============================================================
# TTS MODEL CONFIGURATION
# ============================================================
# Path to active TTS model (relative to backend directory)
MODEL_PATH=./models/active
CONFIG_PATH=./models/active/config.json

# Alternative paths for testing
# MODEL_PATH=./models/inactive/my-test-model
# CONFIG_PATH=./models/inactive/my-test-model/config.json

# ============================================================
# AUDIO OUTPUT CONFIGURATION
# ============================================================
# Where to store temporary audio files
AUDIO_TEMP_DIR=./temp/audio
AUDIO_CACHE_DIR=./cache/audio

# Maximum audio file size (bytes)
MAX_AUDIO_SIZE=52428800  # 50MB

# ============================================================
# CORS CONFIGURATION
# ============================================================
CORS_ORIGINS=http://127.0.0.1:3000,http://127.0.0.1:3002,http://localhost:3000,http://localhost:3002

# For AWS deployment:
# CORS_ORIGINS=https://your-domain.com,https://www.your-domain.com

# ============================================================
# LOGGING CONFIGURATION
# ============================================================
LOG_LEVEL=INFO
LOG_FILE=./logs/tts-backend.log

# ============================================================
# AWS CONFIGURATION (OPTIONAL)
# ============================================================
# AWS_REGION=us-east-1
# AWS_S3_BUCKET=plattdeutsch-tts-models
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key

# ============================================================
# INFERENCE CONFIGURATION
# ============================================================
# Use CPU by default (set to False for GPU)
USE_CPU=True

# Inference timeout (seconds)
INFERENCE_TIMEOUT=30

# ============================================================
# SECURITY
# ============================================================
# Set to False in production (handled by reverse proxy)
ALLOW_CROSS_ORIGIN=True

# Maximum text length for synthesis (characters)
MAX_TEXT_LENGTH=1000
